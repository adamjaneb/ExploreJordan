                    <a asp-controller="Blog" asp-action="Blog2">Read more</a>
                </div>
            </div>

            <!-- Blog Post 3 -->
            <div class="blog-post">
                <img src="~/img/blog3.jpg" alt="Blog Post 3">
                <div class="blog-details">
                    <h3>8 Day Trip</h3>
                    <p class="date">Published on: August 15, 2022</p>
                    <a asp-controller="Blog" asp-action="Blog3">Read more</a>
                </div>
            </div>

            <!-- Blog Post 4 -->
            <div class="blog-post">
                <img src="~/img/blog4.jpg" alt="Blog Post 4">
                <div class="blog-details">
                    <h3>In Jordan, to Grandmother’s House We Go</h3>
                    <p class="date">Published on: November 17, 2023</p>
