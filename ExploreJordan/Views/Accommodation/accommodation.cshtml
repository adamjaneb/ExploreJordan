@using ExploreJordan.Settings;
@model IEnumerable<Accommodation>
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.17.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css2/CarRentals.css">
    <title>Accommodations</title>
</head>
<body>
    @if (User.Identity.IsAuthenticated)
    {
        <a class="nav-link text-dark" asp-controller="Accommodation" asp-action="Create">Add advertisement</a>
    }
    <div>
        @foreach (var accommodation in Model)
        {
            <div class="CarRentalContainer">
                <div class="style-0">
                    <div class="style-1">
                        <div class="style-2">
                            <div class="style-3">
                                <div class="style-5">
                                    <span class="style-6">
                                        <span class="style-7">@accommodation.Name</span>
                                    </span>
                                </div>
                            </div>
                            <div class="imagesize">
                                <img src="@($"{FileSettings.ImagesPath}/{accommodation.Cover}")" alt="Car Image" />
                            </div>
                            <div class="style-9">
                                <div>@accommodation.Description</div>
                            </div>
                            <div class="style-52">

                                @if (User.IsInRole(SD.Role_Admin))
                                {
                                    <div class="edit-delete">
                                        <a class="btn btn-info rounded rounded-3 me-2" asp-controller="Accommodation" asp-action="Edit" asp-route-id="@accommodation.Id">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-fill" viewBox="0 0 16 16">
                                                <path d="M12.854.146a.5.5 0 0 0-.707 0L10.5 1.793 14.207 5.5l1.647-1.646a.5.5 0 0 0 0-.708l-3-3zm.646 6.061L9.793 2.5 3.293 9H3.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.207l6.5-6.5zm-7.468 7.468A.5.5 0 0 1 6 13.5V13h-.5a.5.5 0 0 1-.5-.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.5-.5V10h-.5a.499.499 0 0 1-.175-.032l-.179.178a.5.5 0 0 0-.11.168l-2 5a.5.5 0 0 0 .65.65l5-2a.5.5 0 0 0 .168-.11l.178-.178z" />
                                            </svg>
                                        </a>
                                        <a href="javascript:" class="btn btn-danger rounded rounded-3 js-delete" data-id="@accommodation.Id">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash-fill" viewBox="0 0 16 16">
                                                <path d="M2.5 1a1 1 0 0 0-1 1v1a1 1 0 0 0 1 1H3v9a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V4h.5a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H10a1 1 0 0 0-1-1H7a1 1 0 0 0-1 1zm3 4a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 .5-.5M8 5a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7A.5.5 0 0 1 8 5m3 .5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 1 0" />
                                            </svg>
                                        </a>
                                    </div>
                                }

                                <span class="style-53">
                                    <span class="style-54">@accommodation.Price</span>
                                    <span class="style-55">JD</span>
                                </span>
                            </div>
                            <div class="style-51">
                                <div class="style-56" data-testid="rc-itinerary-cta-button">
                                    <div class="style-57">
                                        <a asp-controller="Accommodation" asp-action="Details" asp-route-id="@accommodation.Id" class="style-58">
                                            <div class="style-59">View Deal</div>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
    @section Scripts {
        <script src="~/js/accomodation-delete.js" asp-append-version="true"></script>
    }
</body>

</html>
