@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<style>
    /* Add styles for the logo */
    .logo img {
        width: 200px;
        height: auto;
        margin-left: 570px;
    }

    /* Add styles for the centered form */
    #registerForm {
        max-width: 300px; /* Set the maximum width of the form */
        width: auto;
        margin: 0 auto; /* Center the form horizontally */
        border: 1px solid #ccc; /* Add a border around the form */
        border-radius: 10px; /* Add some border-radius for rounded corners */
        padding: 20px; /* Add some padding to the form */
        margin-top: 15px; /* Adjust top margin for spacing */
    }

        #registerForm h2 {
            font-family: 'Arial', sans-serif;
            font-weight: normal;
            margin-top: 5px;
        }

    .form-label {
        font-weight: bold;
        font-family: 'Arial', sans-serif;
    }

    .form-control {
        width: 300px;
        height: 30px;
        border-radius: 5px;
    }

    .form-floating.mb-3 {
        margin-bottom: 15px; /* Adjust the value as needed */
    }

    #registerSubmit {
        width: 300px;
        background-color: rgb(3, 161, 252);
        border: none;
        border-radius: 5px;
        height: 30px;
    }

    p {
        font-family: 'Arial', sans-serif;
    }
</style>

<div class="row">
    <div class="col-md-4">
        <section>
            <!-- Logo -->
            <div class="logo" id="logo">
                <a asp-controller="Home" asp-action="Homepage">
                    <img src="~/img/Logo2.png" alt="Your Logo" />
                </a>
            </div>

            <!-- Register Form -->
            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <h2>Create a new account</h2>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                <!-- Email Input Field -->
                <div class="form-floating mb-3">
                    <label asp-for="Input.Email" class="form-label">Email</label>
                    <div>
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                </div>

                <!-- Password Input Field -->
                <div class="form-floating mb-3">
                    <label asp-for="Input.Password" class="form-label">Password</label>
                    <div>
                        <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                </div>

                <!-- Confirm Password Input Field -->
                <div class="form-floating mb-3">
                    <label asp-for="Input.ConfirmPassword" class="form-label">Confirm Password</label>
                    <div>
                        <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>
                

                <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
