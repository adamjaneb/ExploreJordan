@page
@model ResendEmailConfirmationModel
@{
    ViewData["Title"] = "Resend email confirmation";
}

<style>
    /* Add styles for the logo */
    .logo img {
        width: 200px;
        height: auto;
        margin-left: 570px;
    }

    /* Add styles for the centered form */
    #resendConfirmationForm {
        max-width: 300px; /* Set the maximum width of the form */
        width: auto;
        margin: 0 auto; /* Center the form horizontally */
        border: 1px solid #ccc; /* Add a border around the form */
        border-radius: 10px; /* Add some border-radius for rounded corners */
        padding: 20px; /* Add some padding to the form */
        margin-top: 15px; /* Adjust top margin for spacing */
    }

        #resendConfirmationForm h2 {
            font-family: 'Arial', sans-serif;
            font-weight: normal;
            margin-top: 5px;
        }

    .form-label {
        font-weight: bold;
        font-family: 'Arial', sans-serif;
    }

    .form-control {
        width: 300px;
        height: 30px;
        border-radius: 5px;
    }

    .form-floating.mb-3 {
        margin-bottom: 15px; /* Adjust the value as needed */
    }

    #resendSubmit {
        width: 300px;
        background-color: rgb(3, 161, 252);
        border: none;
        border-radius: 5px;
        height: 30px;
    }

    p {
        font-family: 'Arial', sans-serif;
    }
</style>

<div class="row">
    <div class="col-md-4">
        <section>
            <!-- Logo -->
            <div class="logo" id="logo">
                <a asp-controller="Home" asp-action="Homepage">
                    <img src="~/img/Logo2.png" alt="Your Logo" />
                </a>
            </div>

            <!-- Resend Confirmation Form -->
            <form id="resendConfirmationForm" method="post">
                <div asp-validation-summary="All" class="text-danger" role="alert"></div>

                <!-- Email Input Field -->
                <div class="form-floating mb-3">
                    <label asp-for="Input.Email" class="form-label">Email</label>
                    <div>
                        <input asp-for="Input.Email" class="form-control" aria-required="true" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                </div>

                <button id="resendSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Resend</button>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
