@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}

<style>
    .logo img {
        width: 200px;
        height: auto;
        margin-left: 570px;
    }

    #forgotPasswordForm {
        max-width: 300px; 
        width: auto;
        margin: 0 auto; 
        border: 1px solid #ccc; 
        border-radius: 10px; 
        padding: 20px; 
        margin-top: 15px; 
    }

        #forgotPasswordForm h2 {
            font-family: 'Arial', sans-serif;
            font-weight: normal;
            margin-top: 5px;
        }

    .form-label {
        font-weight: bold;
        font-family: 'Arial', sans-serif;
    }

    .form-control {
        width: 300px;
        height: 30px;
        border-radius: 5px;
    }

    .form-floating.mb-3 {
        margin-bottom: 15px; 
    }

    #resetPasswordSubmit {
        width: 300px;
        background-color: rgb(3, 161, 252);
        border: none;
        border-radius: 5px;
        height: 30px;
    }

    p {
        font-family: 'Arial', sans-serif;
    }
</style>
<div class="row">
    <div class="col-md-4">
        <section>
            <!-- Logo -->
            <div class="logo" id="logo">
                <a asp-controller="Home" asp-action="Homepage">
                    <img src="~/img/Logo2.png" alt="Your Logo" />
                </a>
            </div>

            <!-- Forgot Password Form -->
            <form id="forgotPasswordForm" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                <!-- Email Input Field -->
                <div class="form-floating mb-3">
                    <label asp-for="Input.Email" class="form-label">Email</label>
                    <div>
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                </div>

                <button id="resetPasswordSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Reset Password</button>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
